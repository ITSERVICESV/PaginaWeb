<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Generador de QR Personalizable</title>
    <style>
        body {
            font-family: Arial;
            margin: 30px;
        }
        #qr-container {
            margin-top: 20px;
        }
    </style>
</head>
<body>

<h2>Generador de QR Personalizable</h2>

<label>Texto o enlace para el QR:</label><br>
<input type="text" id="qr-text" placeholder="Escribe aquí..." style="width:300px;"><br><br>

<label>Color del QR:</label>
<input type="color" id="qr-color" value="#000000"><br><br>

<label>Color del fondo:</label>
<input type="color" id="bg-color" value="#ffffff"><br><br>

<button onclick="generarQR()">Generar QR</button>

<div id="qr-container"></div>

<!-- Librería QRCode.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

<script>
    let qr;

    function generarQR() {
        const texto = document.getElementById("qr-text").value;
        const colorQR = document.getElementById("qr-color").value;
        const colorFondo = document.getElementById("bg-color").value;

        // Borrar QR anterior
        document.getElementById("qr-container").innerHTML = "";

        qr = new QRCode(document.getElementById("qr-container"), {
            text: texto,
            width: 256,
            height: 256,
            colorDark: colorQR,
            colorLight: colorFondo,
            correctLevel: QRCode.CorrectLevel.H
        });
    }
</script>

</body>
</html>
